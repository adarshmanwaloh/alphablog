<% if @user.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h2>The following errors prevented the article from being saved</h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
        <% end %>
    </ul>
  </div>
<% end %>

    <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info" , local: true) do |f| %>

      <div class="form-group row">
        <%= f.label :username, class: "col-2 col-form-label" %><br />
          <div class="col-10">
            <%= f.text_field :username,placeholder: "Enter the user name ",class: "form-control my-1" %>
          </div>
      </div>

      <div class="form-group row">
        <%= f.label :email, class: "col-2 col-form-label" %><br />
          <div class="col-10">
            <%= f.email_field :email,placeholder: "Enter the user email ",class: "form-control my-1" %>
          </div>
      </div>
      <div class="form-group row">
        <%= f.label :password, class: "col-2 col-form-label" %><br />
          <div class="col-10">
            <%= f.password_field :password,placeholder: "Enter the password ",class: "form-control my-1" %>
          </div>
      </div>
      <div class="form-group row justify-content-center">
        <p>
          <%= f.submit "Sing Up" , class: "btn btn-warning" %>
        </p>
      </div>


      <% end %>