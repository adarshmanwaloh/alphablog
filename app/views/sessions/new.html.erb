<h1 class="text-center mt-4">Login in </h1>

<div class="container">



        <%= form_with(scope: :session,url:login_path, class: "shadow p-3 mb-3 bg-info" , local: true) do |f| %>

            <div class="form-group row">
                <%= f.label :email, class: "col-2 col-form-label" %><br />
                    <div class="col-10">
                        <%= f.email_field :email,placeholder: "Enter the user email " ,class: "form-control my-1" %>
                    </div>
            </div>
            <div class="form-group row">
                <%= f.label :password, class: "col-2 col-form-label" %><br />
                    <div class="col-10">
                        <%= f.password_field :password,placeholder: "Enter the password " ,class: "form-control my-1",placeholder: "Enter you password" %>
                    </div>
            </div>
            <div class="form-group row justify-content-center">
                <p>
                    <%= f.submit "Login" , class: "btn btn-warning text-center mt-4"  %>
                </p>
            </div>


            <% end %>
        
        
</div>